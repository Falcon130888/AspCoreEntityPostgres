@model AspCoreEntityPostgres.Models.User

@{
    ViewData["Title"] = "Details";
}
<h1>Детали</h1>

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFIO)
        </dd>
        <dt class="col-sm-2">
            Логин ОС
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAdLogin)
        </dd>
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLogin)
        </dd>
        <dt class="col-sm-2">
            Отдел
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Otdel.NameOtdel)
        </dd>
        <dt class="col-sm-2">
            Должность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dolzh.NameDolzh)
        </dd>
        <dt class="col-sm-2">
            Роль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.NameRole)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdUser">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
<form asp-action="Report">
    <input type="hidden" asp-for="IdUser" />
    <input type="submit" value="сформировать в PDF" class="btn btn-primary" />
</form>
