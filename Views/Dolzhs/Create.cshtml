@*@model AspCoreEntityPostgres.Models.Dolzh*@
@using AspCoreEntityPostgres.ViewModel
@model DolzhViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Должность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Отдел
                @Html.DropDownListFor(m => m.Dolzh.IdOtdel, Model.Otdels, "Выберите отдел", new { @class = "form-control mb-2 mr-sm-2" })
            </div>
            <div class="form-group">
                Наиенование должности
                <input asp-for="@Model.Dolzh.NameDolzh" class="form-control" />
                <span asp-validation-for="@Model.Dolzh.NameDolzh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку должностей</a>
</div>