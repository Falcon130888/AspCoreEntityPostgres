@model AspCoreEntityPostgres.Models.Dolzh

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Должность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDolzh" />
            <div class="form-group">
                №
                <input asp-for="IdOtdel" class="form-control" />
                <span asp-validation-for="IdOtdel" class="text-danger"></span>
            </div>
            <div class="form-group">
                Наименование
                <input asp-for="NameDolzh" class="form-control" />
                <span asp-validation-for="NameDolzh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку должностей</a>
</div>

