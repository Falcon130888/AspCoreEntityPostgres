@model AspCoreEntityPostgres.Models.Otdel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Отдел</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 Наименование отдела
                <input asp-for="NameOtdel" class="form-control" />
                <span asp-validation-for="NameOtdel" class="text-danger"></span>
            </div>
            <div class="form-group">
                Руководитель отдела
                <input asp-for="LeadOtdel" class="form-control" />
                <span asp-validation-for="LeadOtdel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку отделов</a>
</div>

